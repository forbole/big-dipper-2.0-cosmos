{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NEXT_PUBLIC_BANNERS_JSON",
        "NEXT_PUBLIC_GRAPHQL_URL",
        "NEXT_PUBLIC_GRAPHQL_WS",
        "NEXT_PUBLIC_MATOMO_SITE_ID",
        "NEXT_PUBLIC_MATOMO_URL",
        "NEXT_PUBLIC_RPC_WEBSOCKET"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "outputs": [],
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "env": ["PORT"],
      "outputs": [],
      "persistent": true
    },
    "ts-check": {
      "outputs": []
    },
    "lint": {
      "outputs": [".next/cache/eslint/**"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "env": ["PORT"],
      "outputs": []
    },
    "graphql:codegen": {
      "outputs": []
    }
  },
  "globalEnv": [
    "BASE_PATH",
    "BUILD_STANDALONE",
    "NEXT_PUBLIC_CHAIN_TYPE",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_PUBLIC_RELEASE",
    "NODE_ENV",
    "npm_package_version",
    "PORT",
    "PROJECT_NAME",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_ENVIRONMENT",
    "SENTRY_PROJECT",
    "SENTRY_ORG",
    "SENTRY_URL",
    "VERCEL"
  ],
  "globalDependencies": [
    ".env",
    ".eslintrc.js",
    ".gitignore",
    ".yarnrc.yml",
    "packages/shared-utils/**/*"
  ]
}
