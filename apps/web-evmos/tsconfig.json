{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "rootDir": "../..",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "../../packages/ui/src/*"],
      "@/public/*": ["public/*"],
      "ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["*.d.ts", "src/**/*.ts", "src/**/*.tsx", "../../packages/ui/*.d.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
