{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@hooks": ["src/hooks"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@screens/*": ["src/screens/*"],
      "@public/*": ["public/*"],
      "@utils/*": ["src/utils/*"],
      "@contexts": ["src/contexts"],
      "@recoil/*": ["src/recoil/*"],
      "@graphql": ["src/graphql"],
      "@graphql/*": ["src/graphql/*"],
      "@graphql/types": ["src/graphql/types"]
    }
  },
  "include": ["*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}
