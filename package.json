{
  "name": "big-dipper-2.0-cosmos",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter ${PROJECT_NAME:-web}... --concurrency=1",
    "build": "turbo run build --filter ${PROJECT_NAME:-web}...",
    "build:ci": "turbo run build --concurrency=30%",
    "clean": "[ -d \"node_modules\" ] && turbo run clean && rm -rf node_modules",
    "start": "turbo run start --filter=${PROJECT_NAME:-web}...",
    "format": "prettier --ignore-path ./.gitignore --write \"**/*.{js,ts,tsx,mjs,cjs,md}\"",
    "lint": "turbo run lint --filter ${PROJECT_NAME:-web}...",
    "lint:ci": "turbo run lint --concurrency=30%",
    "test": "turbo run test --filter ${PROJECT_NAME:-web}...",
    "test:snapshot": "turbo run test --filter ${PROJECT_NAME:-web}... -- -u",
    "test:ci": "turbo run test --concurrency=30%",
    "e2e": "playwright test",
    "e2e:install": "playwright install --with-deps",
    "graphql:codegen": "turbo run graphql:codegen --continue --concurrency=2",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "dotenv-cli": "^6.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "turbo": "latest"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=16.13.0",
    "yarn": ">=3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,css,md}": "prettier --write"
  }
}
