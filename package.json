{
  "name": "big-dipper-2.0-cosmos",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --no-cache --concurrency=1",
    "dev:web": "turbo run dev --no-cache --filter=web...",
    "build": "turbo run build --continue --concurrency=30%",
    "build:web": "turbo run build --filter=web...",
    "clean": "rm -rf node_modules; turbo run clean",
    "start": "turbo run start --filter=web...",
    "format": "prettier --ignore-path ./.gitignore --write \"**/*.{js,ts,tsx,mjs,cjs,md}\"",
    "lint": "turbo run lint --continue --concurrency=30%",
    "test": "turbo run test --continue --concurrency=30%",
    "test:web": "turbo run test --filter=web...",
    "e2e": "turbo run e2e --continue --concurrency=30%",
    "e2e:web": "turbo run e2e --filter=web...",
    "graphql:codegen": "turbo run graphql:codegen --continue --concurrency=2"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.0",
    "dotenv-cli": "^6.0.0"
  },
  "devDependencies": {
    "prettier": "2.7.1",
    "turbo": "latest"
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=16.13.0",
    "yarn": ">=3.2.4"
  }
}
